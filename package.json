{
  "name": "desktop-custom-speed-media-player",
  "version": "2.0.0",
  "description": "A cross-platform desktop media player with custom speed controls",
  "author": "Desktop Custom Speed Media Player Team",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "dev": "node scripts/dev.js",
    "build": "react-scripts build && node scripts/convert-icon.js && node scripts/copy-electron.js",
    "build:electron": "npm run build && electron-builder",
    "build:prod": "node scripts/build.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.desktopcustomspeedmediaplayer.app",
    "productName": "Desktop Custom Speed Media Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*"
    ],
    "icon": "electron/assets/icon.ico",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "fileAssociations": [
        {
          "ext": "mp4",
          "name": "MP4 Video",
          "description": "MP4 Video File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "avi",
          "name": "AVI Video",
          "description": "AVI Video File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "mkv",
          "name": "MKV Video",
          "description": "MKV Video File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "mov",
          "name": "MOV Video",
          "description": "MOV Video File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "wmv",
          "name": "WMV Video",
          "description": "WMV Video File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "flv",
          "name": "FLV Video",
          "description": "FLV Video File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "webm",
          "name": "WebM Video",
          "description": "WebM Video File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "m4v",
          "name": "M4V Video",
          "description": "M4V Video File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "mp3",
          "name": "MP3 Audio",
          "description": "MP3 Audio File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "wav",
          "name": "WAV Audio",
          "description": "WAV Audio File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "flac",
          "name": "FLAC Audio",
          "description": "FLAC Audio File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "aac",
          "name": "AAC Audio",
          "description": "AAC Audio File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "ogg",
          "name": "OGG Audio",
          "description": "OGG Audio File",
          "icon": "electron/assets/icon.ico"
        },
        {
          "ext": "m4a",
          "name": "M4A Audio",
          "description": "M4A Audio File",
          "icon": "electron/assets/icon.ico"
        }
      ]
    },
    "mac": {
      "icon": "electron/assets/icon.png",
      "category": "public.app-category.video",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "fileAssociations": [
        {
          "ext": "mp4",
          "name": "MP4 Video",
          "description": "MP4 Video File",
          "icon": "electron/assets/icon.png",
          "role": "Viewer"
        },
        {
          "ext": "avi",
